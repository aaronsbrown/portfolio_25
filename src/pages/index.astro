---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import VectorField from '../components/VectorField.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
const featuredPosts = blogPosts
  .filter(post => post.data.featured)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const latestPosts = blogPosts
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);
---

<Base title="Aaron Steele Brown - Creative Technologist">
  <Header />
  
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center">
      <VectorField />
      
      <div class="relative z-10 text-center max-w-4xl mx-auto px-4">
        <h1 class="font-grotesk text-6xl md:text-8xl font-bold mb-6 tracking-tight text-brutalist">
          Aaron Steele Brown
        </h1>
        <p class="text-xl md:text-2xl text-neutral-600 dark:text-neutral-400 mb-8 max-w-2xl mx-auto font-grotesk">
          Creative Leadership in Multidisciplinary Design & Strategy
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/journal" class="inline-block bg-neutral-900 dark:bg-neutral-100 text-neutral-50 dark:text-neutral-900 px-8 py-3 font-grotesk text-sm uppercase tracking-wide hover:bg-neutral-700 dark:hover:bg-neutral-300 transition-colors border border-neutral-900 dark:border-neutral-100">
            View Journal
          </a>
          <a href="#about" class="inline-block border border-neutral-900 dark:border-neutral-100 text-neutral-900 dark:text-neutral-100 px-8 py-3 font-grotesk text-sm uppercase tracking-wide hover:bg-neutral-900 hover:text-neutral-50 dark:hover:bg-neutral-100 dark:hover:text-neutral-900 transition-colors">
            Learn More
          </a>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 px-4">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <div>
            <h2 class="font-grotesk text-3xl font-bold mb-6 uppercase tracking-wide text-brutalist">
              About
            </h2>
            <div class="prose prose-lg max-w-none text-neutral-700 dark:text-neutral-300 font-grotesk">
              <p>
                I work at the intersection of art, technology, and systems thinking, 
                creating digital experiences that bridge the gap between human intuition 
                and computational logic.
              </p>
              <p>
                My practice combines Bauhaus modularity with Brutalist clarity, 
                analog imperfection with digital precision, exploring how generative 
                systems can create meaningful expressions of creative intent.
              </p>
            </div>
          </div>
          
          <div>
            <h3 class="font-grotesk text-xl font-bold mb-4 uppercase tracking-wide text-brutalist">
              Current Focus
            </h3>
            <ul class="space-y-2 text-neutral-700 dark:text-neutral-300 font-grotesk">
              <li>• Creative leadership strategy</li>
              <li>• Multidisciplinary design systems</li>
              <li>• Executive content & thought leadership</li>
              <li>• Design team management</li>
            </ul>
            
            <div class="mt-8">
              <p class="font-grotesk text-sm uppercase tracking-wide text-neutral-500 dark:text-neutral-500 mb-2">
                Status
              </p>
              <p class="text-neutral-600 dark:text-neutral-400 font-grotesk">
                Open for leadership opportunities
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Latest Writing -->
    <section class="py-20 px-4 bg-neutral-100 dark:bg-neutral-800">
      <div class="max-w-6xl mx-auto">
        <div class="flex justify-between items-end mb-12">
          <h2 class="font-grotesk text-3xl font-bold uppercase tracking-wide text-brutalist">
            Latest Writing
          </h2>
          <a href="/journal" class="font-grotesk text-sm uppercase tracking-wide hover:text-neutral-600 dark:hover:text-neutral-400 transition-colors">
            View All →
          </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {latestPosts.map((post) => (
            <article class="group">
              <a href={`/blog/${post.slug}`} class="block">
                <div class="mb-4">
                  <time class="font-mono text-xs uppercase tracking-wide text-gray-500 dark:text-gray-500">
                    {post.data.date.toLocaleDateString('en-US', { 
                      year: 'numeric', 
                      month: 'short', 
                      day: 'numeric' 
                    })}
                  </time>
                </div>
                <h3 class="font-grotesk text-xl font-bold mb-3 group-hover:text-neutral-600 dark:group-hover:text-neutral-400 transition-colors text-brutalist">
                  {post.data.title}
                </h3>
                {post.data.excerpt && (
                  <p class="text-neutral-600 dark:text-neutral-400 mb-4 font-grotesk">
                    {post.data.excerpt}
                  </p>
                )}
                {post.data.tags && (
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="font-grotesk text-xs uppercase tracking-wide px-2 py-1 bg-neutral-200 dark:bg-neutral-700 text-neutral-700 dark:text-neutral-300 border border-neutral-300 dark:border-neutral-600">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>

  <footer class="py-12 px-4 border-t border-neutral-200 dark:border-neutral-700">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
      <p class="font-grotesk text-sm text-neutral-500 dark:text-neutral-500">
        © 2024 Aaron Steele Brown
      </p>
      <div class="flex space-x-6">
        <a href="mailto:hello@aaronsteelebrown.com" class="font-grotesk text-sm hover:text-neutral-600 dark:hover:text-neutral-400 transition-colors">
          Email
        </a>
        <a href="https://github.com" class="font-grotesk text-sm hover:text-neutral-600 dark:hover:text-neutral-400 transition-colors">
          GitHub
        </a>
        <a href="https://linkedin.com" class="font-grotesk text-sm hover:text-neutral-600 dark:hover:text-neutral-400 transition-colors">
          LinkedIn
        </a>
      </div>
    </div>
  </footer>
</Base>
